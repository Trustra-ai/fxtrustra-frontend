<!DOCTYPE html>
<html>
<head><title>FxTrustra - Admin Panel</title>
<style>
  body { font-family: Arial; margin: 20px; }
  details { margin: 20px 0; padding: 10px; background: #f0f0f0; border-radius: 8px; }
</style>
</head>
<body>
  <h1>FxTrustra Admin Panel</h1>
  <p>All registered users and their holdings:</p>
  <% users.forEach(u => { %>
    <details>
      <summary><strong><%= u.username.toUpperCase() %></strong> â€” <%= u.holdings.length %> holdings</summary>
      <% if (u.holdings.length === 0) { %>
        <p>No holdings</p>
      <% } else { %>
        <ul>
          <% u.holdings.forEach(h => { %>
            <li><%= h.coinId.toUpperCase() %>: <%= h.amount.toFixed(6) %></li>
          <% }) %>
        </ul>
      <% } %>
    </details>
  <% }) %>
  <br><a href="/dashboard">Back to Dashboard</a> | <a href="/logout">Logout</a>
</body>
</html>
